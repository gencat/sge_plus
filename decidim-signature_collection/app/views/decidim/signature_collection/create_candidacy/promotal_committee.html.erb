<% add_decidim_page_title(t("new", scope: "decidim.signature_collection.create_candidacy.select_candidacy_type")) %>
<% announcement_body = capture do %>
  <%= t ".individual_help_text", committee_size: current_candidacy.minimum_committee_members %>
  <%= link_to t(".more_information"), decidim.page_path("candidacies"), target: "_blank", class: "button button__sm button__text-secondary block text-left" %>
<% end %>

<%= cell("decidim/announcement", { body: announcement_body }, callout_class: "secondary") %>

<div class="form__wrapper">
  <%= render partial: "share_committee_link" %>
</div>

<div class="form__wrapper-block flex-col-reverse md:flex-row justify-between">
  <%= link_to :back, class: "button button__sm md:button__lg button__text-secondary" do %>
    <%= icon "arrow-left-line", class: "fill-current" %>
    <%= t("back", scope: "decidim.signature_collection.create_candidacy.previous_form") %>
  <% end %>
  <%= link_to t("continue", scope: "decidim.signature_collection.create_candidacy.previous_form"), finish_create_candidacy_index_path, class: "button button__sm md:button__lg button__secondary" %>
</div>
