<% if candidacy.accepts_online_votes? %>
    <%= render partial: "decidim/signature_collection/candidacies/vote_button",
               locals: {
                 candidacy:,
                 vote_label: t("vote", scope: "decidim.signature_collection.candidacies.vote_cabin"),
                 unvote_label: t("already_voted", scope: "decidim.signature_collection.candidacies.vote_cabin"),
                 steps: signature_has_steps?
               } %>
<% else %>
  <button class='button button__lg button__secondary w-full' disabled>
    <%= t("votes_blocked", scope: "decidim.signature_collection.candidacies.vote_cabin") %>
  </button>
<% end %>
