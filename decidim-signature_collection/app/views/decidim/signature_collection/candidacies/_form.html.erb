<%= form_required_explanation %>

<% unless single_candidacy_type? %>
  <%= form.select :type_id,
                  candidacy_type_options,
                  {},
                  {
                    disabled: !@form.signature_type_updatable?,
                    "data-scope-selector": "candidacy_decidim_scope_id",
                    "data-scope-id": form.object.scope_id.to_s,
                    "data-scope-search-url": decidim_candidacies.candidacy_type_scopes_search_url,
                    "data-signature-types-selector": "candidacy_signature_type",
                    "data-signature-type": current_candidacy.signature_type,
                    "data-signature-types-search-url": decidim_candidacies.candidacy_type_signature_types_search_url
                  } %>
<% end %>

<%= form.text_field :title, autofocus: true, disabled: !allowed_to?(:update, :candidacy, candidacy: current_candidacy), value: translated_attribute(@form.title) %>

<%= text_editor_for(form, :description, toolbar: :content, lines: 8, disabled: !allowed_to?(:update, :candidacy, candidacy: current_candidacy), value: translated_attribute(@form.description)) %>

<% if @form.state_updatable? %>
  <%= form.select :state, Decidim::SignatureCollection::Candidacy.states.keys.map { |state| [I18n.t(state, scope: "decidim.signature_collection.admin_states"), state] }, {} %>
<% end %>

<%= form.select :scope_id, @form.available_scopes.map { |scope| [translated_attribute(scope.scope_name), scope.scope&.id] }, {}, { disabled: !@form.state_updatable? } %>

<% if current_candidacy.area_enabled? %>
  <%= form.areas_select :area_id,
                        areas_for_select(current_organization),
                        {
                          selected: current_candidacy.decidim_area_id,
                          include_blank: current_candidacy.decidim_area_id.blank? || current_candidacy.created?
                        },
                        disabled: !@form.area_updatable? %>
<% end %>

<%= form.hidden_field :signature_type %>

<% if current_candidacy.type.attachments_enabled? %>
  <%= form.attachment :documents,
                      multiple: true,
                      label: t("decidim.signature_collection.form.add_attachments"),
                      button_label: t("decidim.signature_collection.form.add_attachments"),
                      button_class: "button button__lg button__transparent-secondary w-full",
                      button_edit_label: t("decidim.signature_collection.form.edit_attachments"),
                      help_text: t("decidim.signature_collection.form.attachment_legend") %>
<% end %>

<% if current_candidacy.type.promoting_committee_enabled? %>
  <%= render partial: "committee_members" %>
<% end %>

<%= append_javascript_pack_tag "decidim_signature_collection" %>
<%= append_stylesheet_pack_tag "decidim_signature_collection", media: "all" %>
