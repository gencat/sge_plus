<div id="candidacy-<%= current_candidacy.id %>-progress-bar">
  <% current_candidacy.votable_candidacy_type_scopes.each_with_index do |type_scope, index| %>
    <% if index == 0 %>
      <%= cell(
        "decidim/progress_bar",
        current_candidacy.supports_count_for(type_scope.scope),
        total: type_scope.supports_required,
        units_name: "decidim.signature_collection.candidacies.votes_count.count",
        element_id: "candidacy-#{current_candidacy.id}-votes-count"
        ) %>
    <% else %>
      <%= cell(
        "decidim/progress_bar",
        current_candidacy.supports_count_for(type_scope.scope),
        total: type_scope.supports_required,
        element_id: "candidacy-scope-#{type_scope.id}-#{current_candidacy.id}-votes-count"
        ) %>
    <% end %>
  <% end %>
</div>
