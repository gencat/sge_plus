<% add_decidim_page_title(translated_attribute(current_candidacy_type.title)) %>
<div class="item_show__header">
  <h1 class="item_show__header-title">
    <%= t "decidim.admin.titles.candidacies_types" %>
  </h1>
</div>

<div class="item__edit item__edit-1col">
  <div class="item__edit-form">
    <%= decidim_form_for(@form, html: { class: "form-defaults form candidacies_form edit_candidacy_type" }) do |f| %>
      <%= render partial: "form", object: f %>
      <div class="item__edit-sticky">
        <div class="item__edit-sticky-container">
          <%= f.submit t(".update"), class: "button button__sm button__secondary" %>
          <%= f.submit t(".#{ f.object.published ? "unpublish" : "publish" }"),
              class: "button button__sm button__primary",
              onclick: "document.getElementById('publish_action').value='#{!f.object.published}';" %>
          <%= f.hidden_field :published, id: "publish_action", value: f.object.published %>
        </div>
      </div>
      <%= render partial: "candidacy_type_scopes", locals: { candidacy_type: current_candidacy_type } %>
    <% end %>
  </div>
</div>
