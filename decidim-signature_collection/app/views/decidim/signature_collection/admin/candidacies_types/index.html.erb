<% add_decidim_page_title(t("decidim.admin.titles.candidacies_types")) %>

<div class="card" id="candidacy-types">
  <div class="item_show__header">
    <h1 class="item_show__header-title">
      <%= t "decidim.admin.titles.candidacies_types" %>
      <%= link_to t("actions.new_candidacy_type", scope: "decidim.admin"),
                  [:new, :candidacies_type],
                  class: "button button__sm button__secondary" if allowed_to? :create, :candidacy_type %>
    </h1>
  </div>
  <div class="table-scroll">
    <table class="table-list">
      <thead>
        <tr>
          <th><%= t("models.candidacies_types.fields.title", scope: "decidim.admin") %></th>
          <th><%= t("models.candidacies_types.fields.created_at", scope: "decidim.admin") %></th>
          <th><%= t("models.candidacies_types.fields.published", scope: "decidim.admin") %></th>
          <th><%= t("candidacies_type.actions.title", scope: "decidim.resources") %></th>
        </tr>
      </thead>
      <tbody>
        <% @candidacies_types.each do |candidacy_type| %>
        <tr>
          <td>
            <% if allowed_to? :update, :candidacy_type, candidacy_type: candidacy_type %>
              <%= link_to translated_attribute(candidacy_type.title), edit_candidacies_type_path(candidacy_type) %>
            <% else %>
              <%= translated_attribute candidacy_type.title %></td>
            <% end %>
          <td><%= l candidacy_type.created_at, format: :short %></td>
          <td>
            <% if candidacy_type.published %>
              <span class="label success !text-sm"><%= t("participatory_processes.index.published", scope: "decidim.admin") %></span>
            <% else %>
              <span class="label alert !text-sm"><%= t("participatory_processes.index.unpublished", scope: "decidim.admin") %></span>
            <% end %>
          </td>
          <td class="table-list__actions">
            <% if allowed_to? :update, :candidacy_type, candidacy_type: candidacy_type %>
              <%= icon_link_to "pencil-line", edit_candidacies_type_path(candidacy_type), t("actions.configure", scope: "decidim.admin"), class: "action-icon--edit" %>
            <% else %>
              <span class="action-space icon"></span>
            <% end %>

            <%= free_resource_permissions_link(candidacy_type) %>

            <% if allowed_to? :destroy, :candidacy_type, candidacy_type: candidacy_type %>
              <%= icon_link_to "delete-bin-line", candidacy_type, t("actions.destroy", scope: "decidim.admin"), class: "action-icon--remove", method: :delete, data: { confirm: t("actions.confirm_destroy", scope: "decidim.admin") } %>
            <% else %>
              <span class="action-space icon"></span>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
