<% add_decidim_page_title(t("decidim.admin.titles.candidacies")) %>
<div class="card" id="candidacies">
  <div class="item_show__header">
    <h1 class="item_show__header-title">
      <%= t("decidim.admin.titles.candidacies") %>

      <% if allowed_to? :export, :candidacies %>
        <%= export_dropdowns(query) %>
      <% end %>
    </h1>
  </div>
  <%= admin_filter_selector(:candidacies) %>

  <% if show_candidacy_type_callout? %>
    <% link = link_to(t("button", scope:"decidim.signature_collection.admin.index.candidacies_types"), new_candidacies_type_path, class: "button button__sm button__secondary mt-4") %>
    <%= cell("decidim/announcement", t("alert_html", scope:"decidim.signature_collection.admin.index.candidacies_types", link:), callout_class: "alert") %>
  <% else %>
    <div class="table-scroll">
      <table class="table-list">
        <thead>
        <tr>
          <th><%= t("models.candidacies.fields.id", scope: "decidim.admin") %></th>
          <th class="!text-left"><%= t("models.candidacies.fields.title", scope: "decidim.admin") %></th>
          <th><%= t("models.candidacies.fields.state", scope: "decidim.admin") %></th>
          <th><%= sort_link(query, :supports_count, t("models.candidacies.fields.supports_count", scope: "decidim.admin"), default_order: :desc) %></th>
          <th><%= sort_link(query, :created_at, t("models.candidacies.fields.created_at", scope: "decidim.admin"), default_order: :desc) %></th>
          <th><%= sort_link(query, :published_at, t("models.candidacies.fields.published_at", scope: "decidim.admin"), default_order: :desc) %></th>
          <th><%= t ".actions_title" %></th>
        </tr>
        </thead>
        <tbody>
        <% @candidacies.each do |candidacy| %>
          <tr>
            <td><%= candidacy.id %></td>
            <td class="!text-left">
              <% if allowed_to? :edit, :candidacy, candidacy: candidacy %>
                <%= link_to translated_attribute(candidacy.title),
                            decidim_admin_candidacies.edit_candidacy_path(candidacy.to_param) %>
              <% else %>
                <%= translated_attribute(candidacy.title) %>
              <% end %>
            </td>
            <td><%= humanize_admin_state candidacy.state %></td>
            <td><%= candidacy.supports_count %>/<%= candidacy.scoped_type.supports_required %></td>
            <td class="table-list__date"><%= l candidacy.created_at, format: :short %></td>
            <td class="table-list__date"><%= candidacy.published_at? ? l(candidacy.published_at, format: :short) : "" %></td>
            <td class="table-list__actions">

              <% if allowed_to? :read, :share_tokens, current_participatory_space: candidacy %>
                <%= icon_link_to "share-line", decidim_admin_candidacies.candidacy_share_tokens_path(candidacy), t("actions.share_tokens", scope: "decidim.admin"), class: "action-icon--new" %>
              <% else %>
                <span class="action-space icon"></span>
              <% end %>

              <% if allowed_to? :edit, :candidacy, candidacy: candidacy %>
                <%= icon_link_to "pencil-line",
                                 decidim_admin_candidacies.edit_candidacy_path(candidacy.to_param),
                                 t("actions.configure", scope: "decidim.admin"),
                                 class: "action-icon--edit" %>
              <% else %>
                <span class="action-space icon"></span>
              <% end %>

              <% if allowed_to?(:answer, :candidacy, candidacy: candidacy) %>
                <%= icon_link_to "chat-1-line", edit_candidacy_answer_path(candidacy.slug), t("actions.answer", scope: "decidim.candidacies"), class: "action-icon action-icon--answer" %>
              <% else %>
                <%= icon "chat-1-line", scope: "decidim.admin", class: "action-icon action-icon--disabled", role: "img", "aria-hidden": true %>
              <% end %>

              <% if allowed_to? :print, :candidacy, candidacy: candidacy %>
                <%= icon_link_to "printer-line",
                                 decidim_candidacies.print_candidacy_path(candidacy),
                                 t(".print"),
                                 class: "action-icon--print",
                                 target: "_blank",
                                 data: { "external-link": false } %>
              <% else %>
                <span class="action-space icon"></span>
              <% end %>

              <% if allowed_to? :preview, :candidacy, candidacy: candidacy %>
                <%= icon_link_to "eye-line",
                                 decidim_candidacies.candidacy_path(candidacy.to_param),
                                 t(".preview"),
                                 class: "action-icon--preview",
                                 target: "_blank",
                                 data: { "external-link": false } %>
              <% else %>
                <span class="action-space icon"></span>
              <% end %>

              <%= free_resource_permissions_link(candidacy) || content_tag(:span, nil, class: "action-space icon") %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
<%= decidim_paginate @candidacies %>
