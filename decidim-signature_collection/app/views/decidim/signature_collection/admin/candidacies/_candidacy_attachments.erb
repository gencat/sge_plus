<div class="row column">
  <div class="columns">
    <% if current_candidacy.documents.any? %>
      <div class="row column">
        <strong><%= t ".documents" %>:</strong>
        <ul id="documents">
          <% current_candidacy.documents.each do |document| %>
            <li>
              <%= link_to translated_attribute(document.title), document.url %>
              <small><%= document.file_type %> <%= number_to_human_size(document.file_size) %></small>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="columns">
    <% if allowed_to?(:update, :candidacy, candidacy: current_candidacy) %>
      <%= aria_selected_link_to t(".edit"),
                                decidim_admin_candidacies.candidacy_attachments_path(current_participatory_space),
                                class: "button button__sm button__secondary" %>
      <%= aria_selected_link_to t(".new"),
                                decidim_admin_candidacies.new_candidacy_attachment_path(current_participatory_space),
                                class: "button button__sm button__secondary" %>
    <% else %>
      <%= link_to t(".edit"), "#", class: "button button__sm button__secondary muted disabled" %>
      <%= link_to t(".new"), "#", class: "button button__sm button__secondary muted disabled" %>
    <% end %>
  </div>
</div>
