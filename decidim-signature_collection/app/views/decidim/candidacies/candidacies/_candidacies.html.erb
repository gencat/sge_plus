<% if @forced_closed_candidacies %>
  <%= cell("decidim/announcement", t("decidim.candidacies.candidacies.candidacies.closed_candidacies_warning"), callout_class: "warning") %>
<% elsif candidacies.blank? %>
  <%= cell("decidim/announcement", t("decidim.candidacies.candidacies.candidacies.no_candidacies_warning"), callout_class: "warning") %>
<% end %>

<h2 class="h5 md:h3 decorator"><%= t("title", scope: "decidim.candidacies.candidacies.count", count: candidacies.total_count) %></h2>

<%= order_selector available_orders, i18n_scope: "decidim.candidacies.candidacies.orders" %>

<div class="card__grid-grid">
  <%= render candidacies %>
</div>

<%= decidim_paginate candidacies %>
